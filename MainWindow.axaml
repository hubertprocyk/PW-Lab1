<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PW_Lab1.MainWindow"
        Title="PW Lab1"
        Width="640"
        Height="360">
    <StackPanel Margin="15" Spacing="10">
        <TextBox x:Name="FirstNumberTextBox" Watermark="Pierwsza liczba" />
        <TextBox x:Name="SecondNumberTextBox" Watermark="Druga liczba" />
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="Dodawanie" Click="OnAddClicked" />
            <Button Content="Odejmowanie" Click="OnSubtractClicked" />
        </StackPanel>
        <TextBox x:Name="ResultTextBox" Watermark="Wynik" IsReadOnly="True" />
    </StackPanel>
</Window>
